<div class="sport-button-container">
<% @user.activity_blurbs.each do |activity_blurb| %>
  <% if activity_blurb.text == "beginner" %>
    <div class="sports-beginner sports"><%= activity_blurb.activity.name %></div>
    <% elsif activity_blurb.text == "intermediate" %>
    <div class="sports-intermediate sports"><%= activity_blurb.activity.name %></div>
    <% else %>
    <div class=" sports-advanced sports"><%= activity_blurb.activity.name %></div>
  <% end %>
<% end %>
</div>

<% if show_add_button %>
  <a href="/pick-sports">
    <div class="add_sport">
      <span class="fa fa-plus-circle"></span>
    </div>
  </a>
<% end %>

