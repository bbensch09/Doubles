<link rel="stylesheet" href="/stylesheets/swiper.min.css">
<link rel="stylesheet" href="/stylesheets/swiper_config.css">

<!-- Swiper -->
<div class="swiper-container">
    <div class="swiper-wrapper">
        <div class="swiper-slide"><img src="assets/tinder-1.jpeg" class="walkthru-img"></div>
        <div class="swiper-slide"><img src="assets/tinder-2.jpeg" class="walkthru-img"></div>
        <div class="swiper-slide"><img src="assets/tinder-3.jpeg" class="walkthru-img"></div>
        <div class="swiper-slide"><img src="assets/tinder-4.jpeg" class="walkthru-img"></div>
        <div class="swiper-slide"><img src="assets/tinder-5.jpeg" class="walkthru-img"></div>
    </div>
    <!-- Add Pagination -->
    <div class="swiper-pagination"></div>
    <!-- Add Arrows -->
    <div class="swiper-button-next"></div>
    <div class="swiper-button-prev"></div>
</div>

<div class="footer-walkthru">
  <%= link_to "Start Swiping", "/complete_walkthrough", :class=>"btn btn-success btn-wide center" %>
</div>
<!-- Swiper JS -->
<script src="/javascripts/swiper.min.js"></script>

<!-- Initialize Swiper -->
<script src="/javascripts/swiper_config.js"></script>
