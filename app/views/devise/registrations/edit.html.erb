<div class="container">

<div class="edit-profile   col-md-12">

<% if current_user.sign_in_count > 1 %>
<h2>Modify your profile </h2>
<!-- Total Visits:  %= current_user.sign_in_count %> -->
<% else %>
<h2>Complete your profile </h2>
<% end %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
<div class="form-inline">
  <div class="form-group">
    <%= f.label :first_name, :class=>"col-md-4" %>
    <%= f.text_field :first_name, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :last_name, :class=>"col-md-4" %>
    <%= f.text_field :last_name, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :email, :class=>"col-md-4" %>
    <%= f.email_field :email, autofocus: true %>
  </div>
  <div class="form-group">
    <img class="profile-img" src=<%= resource.profile_picture_url %> ><br>
    <%= f.label :profile_picture_url, "Update profile image URL" %>
    <%= f.text_field :profile_picture_url, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :bio %> <br>
    <%= f.text_area :bio, size: "25x5", autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :gender, :class=>"col-md-4" %>
    <%= f.text_field :gender, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :age, :class=>"col-md-4" %>
    <%= f.text_field :age, autofocus: true %>
  </div>
  <div class="form-group">
    <%= f.label :location, :class=>"col-md-4" %>
    <%= f.text_field :location, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
</div>
<% end %>
</div>

