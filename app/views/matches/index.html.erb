<h1 class="text-center">All Your Matches</h1>

<div class="text-center">
  <% if @matches.length == 0 %>
  Sorry, no matches yet, check back again later!
  <% else %>
  Congrats, you have <%= @matches.length %> matches!
  <% end %>
</div>

<% @matches.each do |match| %>
<% matched_user = get_matched_user(match, current_user) %>
<div class="match-row">
<img class="img-circle" src="<%= matched_user.profile_picture_url %>"/>
  <div class="match-name"><%= matched_user.first_name %> </div>
  <%= link_to "Chat with #{matched_user.first_name}", "/matches/#{match.id}/chat", :class=>"btn btn-primary btn-match btn-xs" %>
</div>
  <% end %>

